public class Solution {
    public boolean isPalindrome(int x) {
        
        String a=Integer.toString(x);
//1        for(int i=0;)
        int i=0;
        int j=a.length()-1;
        boolean q=true;
        while(i<j)
        {
            if(a.charAt(i)!=a.charAt(j))
            {
                q=false;
                break;
            }
            i++;
            j--;
        }
        
        return q;
    }
}
