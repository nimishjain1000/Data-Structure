import java.io.*;

class GFG {
	public static void main (String[] args) {
		//code
int k=1;
int n=4;
for(int i=0;i<n;i++)
{
    for(int j=0;j<=i;j++)
    {
        System.out.print(k+++" ");
        
    }
    System.out.println();
}

//int l=

int l=k-n;
    int m=0;
for(int i=0;i<4;i++)
{ l=l-m;
 m=0;
    for(int j=4-i;j>0;j--)
    {
        System.out.print(l+m +" ");
        m++;
        
    }
    m--;
    System.out.println();
}
	}
}


